@phdthesis{fauchieFabriquerEditionsEditer2024,
  title = {{Fabriquer des {\'e}ditions, {\'e}diter des fabriques : reconfiguration des processus techniques {\'e}ditoriaux et nouveaux mod{\`e}les {\'e}pist{\'e}mologiques}},
